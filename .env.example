# Anthropic API key (required)
ANTHROPIC_API_KEY=sk-ant-...

# Slack adapter (optional — omit to disable)
# Socket mode (default): needs APP_TOKEN + BOT_TOKEN
# Webhook mode: needs BOT_TOKEN + SIGNING_SECRET
MOM_SLACK_APP_TOKEN=xapp-...
MOM_SLACK_BOT_TOKEN=xoxb-...
MOM_SLACK_SIGNING_SECRET=...

# HTTP port for webhook adapters (default: 3000)
MOM_HTTP_PORT=3000

# Telegram adapter (optional — omit to disable)
# Polling mode (default): just needs BOT_TOKEN
# Webhook mode: needs BOT_TOKEN + WEBHOOK_URL + WEBHOOK_SECRET
MOM_TELEGRAM_BOT_TOKEN=...
MOM_TELEGRAM_WEBHOOK_URL=http://your-server:3001/telegram/webhook
MOM_TELEGRAM_WEBHOOK_SECRET=your-secret-token
MOM_TELEGRAM_WEBHOOK_PORT=3001
